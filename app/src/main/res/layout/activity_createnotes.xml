<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="jaykay12.notemaking.Activities.NoteCreateActivity">

<!--    <EditText
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:hint="Note-Id in Integers"
        android:id="@+id/tbNoteId"/>
-->
    <EditText
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:hint="Title"
        android:padding="5dp"
        android:id="@+id/tbNoteTitle"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:id="@+id/tbNoteContent"
        android:layout_below="@+id/tbNoteTitle"
        android:gravity="top"
        android:hint="Type In Your Notes Here"/>

    <Button
        android:layout_marginTop="20dp"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_below="@+id/tbNoteContent"
        android:gravity="center"
        android:text="Save"
        android:layout_centerHorizontal="true"
        android:id="@+id/btnSave"/>

</RelativeLayout>
