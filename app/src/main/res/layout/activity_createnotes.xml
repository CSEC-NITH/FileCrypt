<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    >

    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/cnToolbar"
        android:background="@color/colorPrimary"
        >


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Create Note"
            android:textColor="#fff"
            android:textStyle="bold"
            android:textSize="18sp"
            android:gravity="center_horizontal"
            android:layout_marginRight="20dp"/>

    </android.support.v7.widget.Toolbar>

<!--    <EditText
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:hint="Note-Id in Integers"
        android:id="@+id/tbNoteId"/>


-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@id/cnToolbar"
        android:layout_marginTop="20dp">

    <EditText
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:hint="Title"
        android:padding="5dp"
        android:id="@+id/tbNoteTitle"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:id="@+id/tbNoteContent"
        android:layout_below="@+id/tbNoteTitle"
        android:gravity="top"
        android:hint="Type In Your Notes Here"/>

    <Button
        android:layout_marginTop="20dp"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_below="@+id/tbNoteContent"
        android:gravity="center"
        android:text="Save"
        android:layout_centerHorizontal="true"
        android:id="@+id/btnSave"
        android:layout_gravity="center_horizontal"/>
    </LinearLayout>

</RelativeLayout>
